<Page xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
      x:Class="XMLFileBrowser.XMLViewer.XMLViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XMLFileBrowser.XMLViewer"
      Background="{StaticResource BackgroundOfPage}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="XMLViewerPage">

    <Grid x:Name="Root_Grid">

        <DataGrid ItemsSource="{Binding People}" AutoGenerateColumns="False" RowDetailsVisibilityMode="Collapsed">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                Content = "+"
                                Click="ShowHideDetails">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" />
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid
                        Margin="20,0,0,0"
                        ItemsSource="{Binding Tasks}"
                        AutoGenerateColumns="False"
                        RowDetailsVisibilityMode="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button 
                                            Content = "+"
                                            Click="ShowHideDetails">
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Binding="{Binding Id}"/>
                            <DataGridTextColumn Binding="{Binding Id}"/>
                            <DataGridTextColumn Binding="{Binding Title}"/>
                            <DataGridTextColumn Binding="{Binding Description}"/>
                        </DataGrid.Columns>

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DataGrid
                                    Margin="20,0,0,0"
                                    ItemsSource="{Binding SubTasks}"
                                    AutoGenerateColumns="False"
                                    RowDetailsVisibilityMode="Collapsed">
                                    <DataGrid.Columns>
                                       
                                        <DataGridTextColumn Binding="{Binding Id}"/>
                                        <DataGridTextColumn Binding="{Binding Title}"/>
                                        <DataGridTextColumn Binding="{Binding Description}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                    </DataGrid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Page>